@{
    var url = ViewData["returnUrl"] as string;
    var temdata = ViewData["Error"] as string;
}
<h1>Login Page</h1>
@if (!string.IsNullOrWhiteSpace(temdata))
{
    <h2 class="alert-danger" style="padding:10px">@temdata</h2>
}
<div class="row">
    <div class="col-md-4">
        <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(url)" method="post">
            <div class="form-group">
                UserName:
                <input type="text" name="Username" class="form-control" />
            </div>
            <div class="form-group">
                Password:
                <input type="password" name="password" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>